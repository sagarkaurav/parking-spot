<%= javascript_include_tag "jquery-ui.min", "data-turbolinks-track" => true %>
<%= javascript_include_tag "cities", "data-turbolinks-track" => true %>
<input type="hidden" id="tags" value=<%= @tags %> >
<div class="container-fluid" id="city-search">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag cities_find_path, method: :post do %>
      <input type="hidden" id="longitude" name="longitude" value="">
      <input type="hidden" id="latitude" name="latitude" value="">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
          <input type="text" id="search-bar" class="form-control" name="city" placeholder="Type city">
        </div>
      </div>
      <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary btn-block">
      </div>
      <% end %>
    </div>
  </div>
</div>
